generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  isAdmin  Boolean
  posts Post[]

  @@map("users")
}

model Post {
  id          String  @id @default(uuid())
  title       String  
  content     String
  created     DateTime  @default(now())
  image       String?
  user_id     String
  user_post   User  @relation(fields: [user_id], references: [id])

  @@map("posts")
}
